import pandas as pd  

ecom_df = pd.read_csv("RecommendationAI/datasets/ecommerce_dataset.csv")

supermarket_df = pd.read_csv("RecommendationAI/datasets/supermarket_sales.csv")

# Display first 5 rows of each dataset to understand the structure
print("E-Commerce Dataset Preview:\n", ecom_df.head())
print("\nSupermarket Sales Dataset Preview:\n", supermarket_df.head())

# Get column names and basic info
print("\nE-Commerce Dataset Columns:\n", ecom_df.columns)
print("\nSupermarket Sales Dataset Columns:\n", supermarket_df.columns)

# Check for missing values
print("\nMissing Values in E-Commerce Dataset:\n", ecom_df.isnull().sum())
print("\nMissing Values in Supermarket Sales Dataset:\n", supermarket_df.isnull().sum())